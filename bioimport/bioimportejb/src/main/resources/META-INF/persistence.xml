<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="bioimportejb">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/bioimportejb</jta-data-source>
		<class>br.com.bioimportejb.entidades.Amostra</class>
		<class>br.com.bioimportejb.entidades.Analise</class>
		<class>br.com.bioimportejb.entidades.AnaliseBio</class>
		<class>br.com.bioimportejb.entidades.Configuracao</class>
		<class>br.com.bioimportejb.entidades.DadosGerai</class>
		<class>br.com.bioimportejb.entidades.DadosTaxon</class>
		<class>br.com.bioimportejb.entidades.Descritor</class>
		<class>br.com.bioimportejb.entidades.DescritorUnidade</class>
		<class>br.com.bioimportejb.entidades.Taxon</class>
		<class>br.com.bioimportejb.entidades.UnidadeMedida</class>
		<class>br.com.bioimportejb.entidades.Usuario</class>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.temp.use_jdbc_metadata_defaults" value="false" />
			
		</properties>
		
		
		
	</persistence-unit>
</persistence>
